<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module01_Activity01.ViewResourceDictionary">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Pink" />
                <Setter Property="BackgroundColor" Value="#314e52"/>
                <Setter Property="FontSize" Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <!-- Use the defined style for a Label -->
            <Label Text="This is a styled label" Style="{StaticResource LabelStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>